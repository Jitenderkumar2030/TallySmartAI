# Production Environment Variables
ENVIRONMENT=production
DEBUG=false

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_minimum_32_characters_long
ENCRYPTION_KEY=your_fernet_encryption_key_44_characters_base64_encoded

# API Keys (Set these in production)
OPENAI_API_KEY=sk-your_production_openai_key
CASHFREE_CLIENT_ID=your_cashfree_client_id
CASHFREE_CLIENT_SECRET=your_cashfree_client_secret
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Database
DATABASE_URL=sqlite:///data/production.db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TIMEOUT=3600

# Rate Limiting & Performance
RATE_LIMIT_PER_MINUTE=100
MAX_UPLOAD_SIZE=52428800
ENABLE_CACHING=true
ENABLE_COMPRESSION=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/tallysmartai.log

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
NOTIFICATION_EMAIL=alerts@yourdomain.com
NOTIFICATION_PASSWORD=your_app_password

# Features
ENABLE_VOICE_COMMANDS=true
ENABLE_PDF_PARSER=true
ENABLE_GST_ANALYZER=true

# Monitoring
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=300

# Security Headers
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
